<style>
  :root {
    --accent: #4e94f3;
    --column-bg: #f5f5f5;
    --card-bg: #ffffff;
    --priority-low: #d7f7c2;
    --priority-medium: #ffe8a2;
    --priority-high: #ffb3b3;
    --shadow: rgba(0, 0, 0, 0.1);
    --progress-color: #4CAF50;
  }

  .crm-board {
    display: flex;
    gap: 2rem;
    overflow-x: auto;
  }

  .column {
    flex: 1;
    background: var(--column-bg);
    border-radius: 12px;
    box-shadow: 0 4px 12px var(--shadow);
    padding: 1.2rem;
    min-width: 320px;
  }

  .column-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
  }

  .progress-bar {
    height: 8px;
    border-radius: 6px;
    background-color: #d4d4d4;
    margin-bottom: 0.7rem;
    overflow: hidden;
  }

  .progress {
    background-color: var(--progress-color);
    height: 100%;
    transition: width 0.4s ease;
  }

  .card {
    background: var(--card-bg);
    border-left: 5px solid var(--progress-color);
    border-radius: 10px;
    box-shadow: 0 3px 10px rgba(0, 0, 0, 0.08);
    padding: 1.2rem;
    margin-bottom: 1.5rem;
    transition: transform 0.2s ease;
    position: relative;
  }

  .card:hover {
    transform: translateY(-4px);
  }

  .card.dragging {
    opacity: 0.9;
    transform: scale(1.02);
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.15);
  }

  .card h4 {
    font-size: 1.1rem;
    margin-bottom: 0.8rem;
    color: #333;
  }

  .card .info-group {
    margin-bottom: 0.5rem;
    font-size: 0.9rem;
    color: #555;
  }

  .card .info-group strong {
    font-weight: 600;
    color: #222;
    display: inline-block;
    width: 130px;
  }

  .priority-label {
    display: inline-block;
    padding: 0.3rem 0.8rem;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: bold;
    color: #333;
    margin-top: 0.8rem;
  }

  .priority-label.low {
    background-color: var(--priority-low);
  }

  .priority-label.medium {
    background-color: var(--priority-medium);
  }

  .priority-label.high {
    background-color: var(--priority-high);
  }

  .card .menu {
    position: absolute;
    top: 0.6rem;
    right: 0.6rem;
    cursor: pointer;
  }

  .menu-options {
    display: none;
    position: absolute;
    top: 1.8rem;
    right: 0;
    background: #fff;
    border-radius: 6px;
    box-shadow: 0 4px 8px var(--shadow);
    z-index: 10;
  }

  .menu-options button {
    padding: 0.6rem 1rem;
    background: none;
    border: none;
    width: 100%;
    text-align: left;
    cursor: pointer;
    font-size: 0.9rem;
  }

  .menu-options button:hover {
    background-color: #f1f1f1;
  }
</style>
